{
  "name": "try-to-make",
  "version": "1.0.0",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "package-win": "electron-packager . Try-it --overwrite --asar=true --platform=win32 --arch=ia32 --icon=icon.ico --prune=true --out=release-builds --version-string.CompanyName=CE --version-string.FileDescription=CE --version-string.ProductName=\"Try-it\"",
    "package-mac": "electron-packager . Try-it --overwrite --asar=true --platform=darwin --arch=x64 --icon=icon.icns --prune=true --out=release-builds --version-string.CompanyName=CE --version-string.FileDescription=CE --version-string.ProductName=\"Try-it\"",
    "package-linux": "electron-packager . Try-it --overwrite --asar=true --platform=linux --arch=x64 --icon=icon.png --prune=true --out=release-builds --version-string.CompanyName=CE --version-string.FileDescription=CE --version-string.ProductName=\"Try-it\"",
    "dev": "nodemon --watch main.js --watch server.js --watch preload.js --watch welcome.html --watch signup.html --watch signin.html --watch styles.css --exec \"electron .\""
  },
  "author": "",
  "license": "ISC",
  "description": "",
  "dependencies": {
    "bcrypt": "^5.1.1",
    "express": "^4.21.0",
    "mysql2": "^3.11.3",
    "sequelize": "^6.37.3"
  },
  "devDependencies": {
    "electron": "^32.1.2",
    "electron-packager": "^17.1.2",
    "nodemon": "^2.0.22"
  },
  "build": {
    "appId": "com.example.yourapp",
    "productName": "Try-it",
    "files": [
      "dist/**/*",
      "main.js",
      "server.js",
      "preload.js",
      "welcome.html",
      "signup.html",
      "signin.html",
      "styles.css"
    ],
    "linux": {
      "target": ["AppImage", "deb"],
      "category": "Utility"
    },
    "mac": {
      "target": ["dmg"]
    },
    "win": {
      "target": ["nsis"]
    }
  }
}
